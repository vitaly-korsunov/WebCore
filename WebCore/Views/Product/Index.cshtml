@model IEnumerable<ModelCore.Product>
<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary mx-2">
                <i class="fa fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
</div>
 <br />
 <div>
     @if (Model.Count() > 0)
     {
         <table id="myTable" class="table table-bordered table-striped text-dark" style="width:100%">
             <thead>
                 <tr>
                     <td>
                         Product Name
                     </td>
                     <td>
                         Price
                     </td>
                     <td>
                     </td>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var obj in Model)
                 {
                     <tr>
                         <td width=50%>@obj.Name</td>
                         <td width=30%>@obj.Price</td>
                         <td>
                             <div class="w-75 btn-group" role="group">
                                 <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                     <i class="fa fa-edit"></i>
                                 </a>
                                 <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                     <i class="bi bi-trash-fill"></i>
                                 </a>
                             </div>
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     }
     else
     {
         <p>No Product Exist.</p>
     }
 </div>
 